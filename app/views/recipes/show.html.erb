<h3><strong>Recipe Title:</strong> <%= @recipe.title %></h3>
<p><strong>Ingredients:</strong></p>
<% @recipe.ingredients.each do |i| %>
<li><%= i.name %></li>
<%end%>
<%= button_to "Back to my Recipes", recipes_path %>
 <% if @recipe.user = current_user %>
 <%link_to "Edit this Recipe", edit_recipe_path %>
 <form method="POST" action="/recipes/<%=@recipe.id%>/delete">
      <input id="hidden" type="hidden" name="_method" value="DELETE">
      <input type="submit" value="Delete this Recipe">
 <%end%>