<%= form_for([@recipe, @ingredient]) do |f| %>

<% if @ingredient.errors.any? %>
<div id="error_explanation">
    <p style="color:red;">
      <%= pluralize(@ingredient.errors.count, "error") %>
      prohibited this ingredient from being saved:
    <% @ingredient.errors.full_messages.each do |msg| %>
    <li style="color:red;"><strong><%= msg %></strong><br><br>
    Please enter another ingredient name.</li>
    <% end %>
  </div>
<% end %>


<div class="field_with_errors">
    <%= f.label :name %>
    <%= f.text_field :name %>
    </div>

    
  <div class="actions">
      <%= f.submit %>
  </div>

<% end %>