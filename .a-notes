    def create
        @recipe = Recipe.find_by(id: params[:recipe_id])
         @ingredient = Ingredient.new(:recipe_id => @recipe.id)
         binding.pry
             if @ingredient.save
             redirect_to recipe_path(@recipe)
         else 
             render :new
         end
    end
    
    
